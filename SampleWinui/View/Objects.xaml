<UserControl
    x:Class="SampleWinui.View.Objects"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SampleWinui.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    xmlns:viewmodel="using:SampleWinui.ViewModel" xmlns:winui="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <viewmodel:ObjectsViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="500" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--<TreeView CanDragItems="True" AllowDrop="True"/>-->
        <Grid >
            <TreeView ItemsSource="{Binding Path=NameCollection}">
                <TreeView.ItemTemplate>
                <DataTemplate>
                    <StackPanel >
                        <TextBlock Text="{Binding Name}" />
                        
                    </StackPanel>
                </DataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

           
                
            </Grid>
        
    </Grid>
</UserControl>
