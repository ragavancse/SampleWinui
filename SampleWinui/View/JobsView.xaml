<UserControl
    x:Class="SampleWinui.View.JobsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SampleWinui.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:SampleWinui.ViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <viewmodel:JobsViewModel x:Key="JobsViewModel" />
    </UserControl.Resources>

    <Grid
        Margin="30"
        CornerRadius="5"
        DataContext="{StaticResource JobsViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="AUTO" />
                <ColumnDefinition Width="AUTO" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Margin="15,0,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource TextFontColor}"
                Text="List of Jobs" />
            <StackPanel
                Grid.Column="1"
                Margin="0,0,30,0"
                Orientation="Horizontal">
                <SymbolIcon Margin="0,0,10,0" Symbol="Refresh" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="10"
                    FontWeight="SemiBold"
                    Text="REFRESH" />
            </StackPanel>

            <Border
                Grid.Column="2"
                Width="200"
                Height="30"
                Margin="0,0,10,0"
                BorderBrush="CadetBlue"
                BorderThickness="1"
                CornerRadius="20">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="AUTO" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <SymbolIcon
                        Width="20"
                        Height="20"
                        Symbol="Find" />
                    <Border
                        Grid.Column="1"
                        Margin="0,0,0,0"
                        BorderBrush="CadetBlue"
                        BorderThickness="1" />
                    <TextBox
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        PlaceholderText="Search" />
                </Grid>
            </Border>



        </Grid>


        <controls:DataGrid
            x:Name="gridView"
            Grid.Row="1"
            AutoGenerateColumns="False"
            Background="White"
            Foreground="Black"
            GridLinesVisibility="All"
            HorizontalGridLinesBrush="#bdbdbd"
            ItemsSource="{Binding Jobs}"
            VerticalGridLinesBrush="#bdbdbd">
            <controls:DataGrid.CellStyle>
                <Style TargetType="controls:DataGridCell">
                    <Setter Property="Height" Value="50" />
                </Style>
            </controls:DataGrid.CellStyle>

            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn
                    Width="140"
                    Binding="{Binding JobType}"
                    Header="Job Type" />
                <controls:DataGridTextColumn
                    Width="100"
                    Binding="{Binding JobId}"
                    Header="Job ID" />
                <controls:DataGridTextColumn
                    Width="900"
                    Binding="{Binding Descripton}"
                    Header="Descripton" />
                <controls:DataGridTextColumn
                    Width="180"
                    Binding="{Binding Status}"
                    Header="Status" />
                <controls:DataGridTextColumn
                    Width="300"
                    Binding="{Binding LastMessage}"
                    Header="Last Message" />
            </controls:DataGrid.Columns>
        </controls:DataGrid>

        <StackPanel
            Grid.Row="2"
            Background="White"
            Orientation="Horizontal">
            <Button Background="Transparent">
                <Path
                    Width="10"
                    Height="10"
                    Margin="0,0,0,0"
                    Data="M0,0L9.5450122,0 9.5450122,12.075989 16.878019,8 31.271999,0 31.271999,16 31.271999,32 16.878019,24 9.5450122,19.924011 9.5450122,32 0,32z"
                    Fill="Black"
                    RenderTransformOrigin="0.5,0.5"
                    Stretch="Uniform" />
            </Button>
            <Button Background="Transparent">
                <Path
                    Width="10"
                    Height="10"
                    Margin="0,0,0,0"
                    Data="M27.519981,0L27.519981,31.999999 0,16z"
                    Fill="Black"
                    RenderTransformOrigin="0.5,0.5"
                    Stretch="Uniform" />
            </Button>
            <TextBlock Height="20">
                <Run Text="1" />
                <Run Text="of" />
                <Run Text="3" />
            </TextBlock>
            <Button Background="Transparent">
                <Path
                    Width="10"
                    Height="10"
                    Margin="0,0,0,0"
                    Data="M0,0L27.519999,16 0,32z"
                    Fill="Black"
                    RenderTransformOrigin="0.5,0.5"
                    Stretch="Uniform" />
            </Button>
            <Button Background="Transparent">
                <Path
                    Width="10"
                    Height="10"
                    Margin="0,0,0,0"
                    Data="M0,0.74398804L18.548009,16.001984 0,31.259003 0,16.001984z M18.548009,0L25.370002,0 25.370002,32 18.548009,32 18.548009,16.001984z"
                    Fill="Black"
                    RenderTransformOrigin="0.5,0.5"
                    Stretch="Uniform" />
            </Button>
            <TextBlock Height="20">
                <Run Text="1" />
                <Run Text="-" />
                <Run Text="30" />
                <Run Text="of" />
                <Run Text="90" />
                <Run Text="items" />

            </TextBlock>

        </StackPanel>
    </Grid>
</UserControl>
