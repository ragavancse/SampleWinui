<UserControl
    x:Class="SampleWinui.View.JobsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SampleWinui.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:SampleWinui.ViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <viewmodel:JobsViewModel x:Key="JobsViewModel" />
    </UserControl.Resources>

    <Grid DataContext="{StaticResource JobsViewModel}" Margin="30" CornerRadius="5" >
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Style="{StaticResource TabColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="List of Jobs" Style="{StaticResource TextFontColor}" VerticalAlignment="Center" Margin="15,0,0,0" />
            <AutoSuggestBox Width="200" Height="30" Margin="0,0,30,0" VerticalAlignment="Center"
                            CornerRadius="15" Grid.Column="2" PlaceholderText="Search" Foreground="Black"/>

        </Grid >


        <controls:DataGrid
            x:Name="gridView"
            Grid.Row="1" 
            Foreground="Black" 
            Background="White"
            AutoGenerateColumns="False" GridLinesVisibility="All" HorizontalGridLinesBrush="Gray" VerticalGridLinesBrush="Gray"
            ItemsSource="{Binding Jobs}">

            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn
                    Width="*" 
                    Binding="{Binding JobType}"
                    Header="Job Type" >
                    <controls:DataGridTextColumn.HeaderStyle>
                        <Style TargetType="GridViewHeaderItem">
                            <Setter Property="Background" Value="Gray"></Setter>
                        </Style>
                    </controls:DataGridTextColumn.HeaderStyle>
                </controls:DataGridTextColumn>
                <controls:DataGridTextColumn
                    Width="*"
                    Binding="{Binding JobId}"
                    Header="Job ID" />
                <controls:DataGridTextColumn
                    Width="*"
                    Binding="{Binding Descripton}"
                    Header="Descripton" />
                <controls:DataGridTextColumn
                    Width="*"
                    Binding="{Binding Status}"
                    Header="Status" />
                <controls:DataGridTextColumn
                    Width="*"
                    Binding="{Binding LastMessage}"
                    Header="Last Message" />
            </controls:DataGrid.Columns>
        </controls:DataGrid>
  
    <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Background="Transparent">
                <Path
                    Width="10"
                    Height="10"
                    Margin="0,0,0,0"
                    Data="M0,0L9.5450122,0 9.5450122,12.075989 16.878019,8 31.271999,0 31.271999,16 31.271999,32 16.878019,24 9.5450122,19.924011 9.5450122,32 0,32z"
                    Fill="Black"
                    RenderTransformOrigin="0.5,0.5"
                    Stretch="Uniform" />
            </Button>
            <Button Background="Transparent">
                <Path
                    Width="10"
                    Height="10"
                    Margin="0,0,0,0"
                    Data="M27.519981,0L27.519981,31.999999 0,16z"
                    Fill="Black"
                    RenderTransformOrigin="0.5,0.5"
                    Stretch="Uniform" />
            </Button>
            <TextBlock Height="20">
                <Run Text="1" />
                <Run Text="of" />
                <Run Text="3" />
            </TextBlock>
            <Button Background="Transparent">
                <Path
                    Width="10"
                    Height="10"
                    Margin="0,0,0,0"
                    Data="M0,0L27.519999,16 0,32z"
                    Fill="Black"
                    RenderTransformOrigin="0.5,0.5"
                    Stretch="Uniform" />
            </Button>
            <Button Background="Transparent">
                <Path
                    Width="10"
                    Height="10"
                    Margin="0,0,0,0"
                    Data="M0,0.74398804L18.548009,16.001984 0,31.259003 0,16.001984z M18.548009,0L25.370002,0 25.370002,32 18.548009,32 18.548009,16.001984z"
                    Fill="Black"
                    RenderTransformOrigin="0.5,0.5"
                    Stretch="Uniform" />
            </Button>
            <TextBlock Height="20">
                <Run Text="1" />
                <Run Text="-" />
                <Run Text="30" />
                <Run Text="of" />
                <Run Text="90" />
                <Run Text="items" />

            </TextBlock>

        </StackPanel>
    </Grid>
</UserControl>
